<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
        android:layout_width="match_parent"
            android:id="@+id/myRadioGroup"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_outcome"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp">


            <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:id="@+id/radioSuccess"
            android:layout_below="@+id/game_outcome"
            android:layout_alignEnd="@+id/game_outcome"
            android:text="Sucesso"
                android:textSize="11sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/radioDefeat"
                android:text="Derrota"
                android:layout_marginStart="5sp"
                android:textSize="11sp" />

            <RadioButton
            android:text="Cancelado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:id="@+id/radioCancelled"
                android:layout_marginLeft="5sp"
                android:textSize="11sp" />

        </RadioGroup>

        <TextView
            android:text="117"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game_code"
            android:textSize="24sp"
            android:layout_alignBottom="@+id/game_outcome"
            android:layout_alignStart="@+id/myRadioGroup" />

        <TextView
            android:text=" - "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/myRadioGroup"
            android:layout_toEndOf="@+id/game_code"
            android:id="@+id/textView7"
            android:textSize="24sp" />

        <TextView
            android:text="Liverpool FC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game_outcome"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView7" />

    </RelativeLayout>
</LinearLayout>