<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="1dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="1dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.firebaseio.placardbolsa.MainActivity"
    tools:showIn="@layout/activity_main">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_below="@+id/stats_card"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:progress="0"
        android:progressTint="@android:color/darker_gray"
        android:layout_height="wrap_content" />

    <it.gmariotti.cardslib.library.recyclerview.view.CardRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card:list_card_layout_resourceID="@layout/populate_this"
        android:id="@+id/transactions_view"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-4dp"
        android:layout_below="@+id/progressBar2" >

    </it.gmariotti.cardslib.library.recyclerview.view.CardRecyclerView>

    <it.gmariotti.cardslib.library.view.CardViewNative
        android:id="@+id/stats_card"
        card:cardPreventCornerOverlap="true"
        card:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        style="@style/native_recyclerview_card.base"
        card:card_layout_resourceID="@layout/native_card_layout"
        android:layout_height="110dp"
        android:layout_marginBottom="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp">

            <GridLayout
                android:layout_width="138dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_height="26dp">

                <TextView
                    android:id="@+id/stats_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:paddingLeft="3dp"
                    android:layout_column="1"
                    android:textSize="23sp"
                    android:text="Na bolsa: " />

            </GridLayout>

            <TextView
                android:id="@+id/stats_text1"
                android:layout_width="185dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:paddingTop="4dp"
                android:paddingLeft="5dp"
                android:layout_row="0"
                android:layout_column="0"
                android:text="EstatÃ­sticas:" />

            <TextView
                android:id="@+id/stats_text3"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:textSize="24sp"
                android:paddingRight="10dp"
                android:layout_width="90dp"
                android:paddingBottom="1dp"
                android:gravity="right" />

            <TextView
                android:textSize="23sp"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:background="@color/buttonTextColor" />

        </GridLayout>


    </it.gmariotti.cardslib.library.view.CardViewNative>

</RelativeLayout>
