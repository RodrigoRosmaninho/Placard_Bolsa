<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.firebaseio.placardbolsa">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon, android:label, android:theme, android:supportsRtl, android:allowBackup">
        <activity
            android:name=".MainActivity"
            android:colorPrimaryDark="#880000"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.firebaseio.placardbolsa.MainActivity" />
        </activity>
        <activity
            android:name=".BetActivity"
            android:colorPrimaryDark="#880000"
            android:label="Confirmar Adição"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            tools:replace="android:name, android:label, android:parentActivityName" />
        <activity
            android:name=".IntroActivity"
            android:colorPrimaryDark="#880000"
            android:screenOrientation="portrait"
            tools:replace="android:name" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme"
            tools:replace="android:name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NotesActivity"
            android:label="Notas"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".NewBetActivity"
            android:label="@string/title_activity_new_bet"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.firebaseio.placardbolsa.MainActivity" />
        </activity>
        <activity
            android:name=".EditBet"
            android:label="@string/title_activity_edit_bet"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.firebaseio.placardbolsa.MainActivity" />
        </activity>
    </application>

</manifest>