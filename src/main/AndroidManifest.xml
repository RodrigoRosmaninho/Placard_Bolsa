<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.firebaseio.placardbolsa">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:colorPrimaryDark="#880000">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.firebaseio.placardbolsa.StatsActivity"
            android:label="Estatísticas"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:colorPrimaryDark="#880000"
            android:parentActivityName="com.firebaseio.placardbolsa.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.firebaseio.placardbolsa.MainActivity" />
        </activity>
        <activity
            android:name="com.firebaseio.placardbolsa.BetActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Confirmar Adição"
            android:colorPrimaryDark="#880000"
            android:parentActivityName="com.firebaseio.placardbolsa.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.firebaseio.placardbolsa.MainActivity" />
        </activity>
        <activity
            android:name="com.firebaseio.placardbolsa.ConfirmActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:colorPrimaryDark="#880000"
            android:parentActivityName="com.firebaseio.placardbolsa.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.firebaseio.placardbolsa.MainActivity" />
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>