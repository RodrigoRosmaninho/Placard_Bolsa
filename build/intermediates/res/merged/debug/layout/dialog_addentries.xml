<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:paddingBottom="5dp"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="138dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NÂº da Aposta"
                android:textColor="#80000000"
                android:textSize="13sp"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="error"
                android:textColor="#000000"
                android:id="@+id/n_da_aposta"
                android:textSize="15sp"
                android:layout_row="2"
                android:layout_column="0" />

        </GridLayout>

        <GridLayout
            android:layout_width="200dp"
            android:layout_row="0"
            android:layout_column="3"
            android:paddingTop="2dp"
            android:layout_height="26dp">

            <TextView
                android:id="@+id/d_da_aposta"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_row="1"
                android:paddingLeft="3dp"
                android:layout_column="1"
                android:textSize="16sp"
                android:layout_width="163dp" />

            <ImageView
                card:srcCompat="@drawable/icon_ticket_calendar"
                android:id="@+id/imageView"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_height="match_parent"
                android:layout_width="30dp" />

        </GridLayout>

        <GridLayout
            android:layout_row="1"
            android:layout_column="0"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_width="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Montante Base"
                android:textColor="#80000000"
                android:textSize="13sp"
                android:layout_row="1"
                android:layout_column="0" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:id="@+id/ammount_spinner"
                android:textColor="#000000"
                android:layout_width="100dp" />

        </GridLayout>

        <GridLayout
            android:layout_width="200dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_height="60dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Aposta"
                android:textColor="#80000000"
                android:textSize="13sp"
                android:layout_row="1"
                android:layout_column="0" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:id="@+id/type_spinner"
                android:textColor="#000000"
                android:layout_width="140dp" />

        </GridLayout>

    </GridLayout>

</LinearLayout>