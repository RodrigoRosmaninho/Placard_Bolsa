<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:id="@+id/individual_bet">

    <TextView
        android:id="@+id/bet_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_row="0"
        android:layout_column="0"
        android:text="52"
        android:paddingStart="10sp"
        android:textColor="@color/card_section_title_color" />

    <TextView
        android:text="25.00â‚¬"
        android:paddingEnd="15sp"
        android:textSize="18sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bet_amount"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="7 Jogos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bet_game_number"
        android:paddingStart="20sp"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/bet_number"
        android:layout_alignBottom="@+id/bet_number"
        android:layout_toEndOf="@+id/bet_number" />

    <TextView
        android:text="Aposta Combinada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bet_type"
        android:paddingStart="20sp"
        android:textSize="13sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/bet_number"
        android:paddingTop="3sp"
        android:textColor="@color/bodyTextColor" />

</RelativeLayout>