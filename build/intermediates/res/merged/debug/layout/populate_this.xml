<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card="http://schemas.android.com/apk/res-auto"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<it.gmariotti.cardslib.library.view.CardViewNative
    android:id="@+id/list_cardId"
    android:layout_width="match_parent"
    style="@style/native_recyclerview_card.base"
    card:card_layout_resourceID="@layout/native_card_layout"
    card:cardPreventCornerOverlap="true"
    card:cardUseCompatPadding="true"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_height="110dp"
    android:paddingBottom="3dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp">

        <GridLayout
            android:layout_width="138dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_height="26dp">

            <ImageView
                card:srcCompat="@drawable/icon_ticket_calendar"
                android:id="@+id/imageView"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_height="match_parent"
                android:layout_width="35dp" />

            <TextView
                android:id="@+id/bet_text2"
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:layout_row="1"
                android:paddingLeft="3dp"
                android:layout_column="1"
                android:textSize="18sp" />

        </GridLayout>

        <TextView
            android:id="@+id/bet_text4"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="18sp"
            android:paddingRight="10dp"
            android:layout_width="123dp"
            android:paddingLeft="5dp"
            android:paddingBottom="1dp"
            android:gravity="left" />

        <TextView
            android:id="@+id/bet_text1"
            android:layout_width="185dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:textSize="23sp"
            android:paddingTop="3dp"
            android:paddingLeft="5dp"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:id="@+id/bet_text3"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:textSize="24sp"
            android:paddingRight="12dp"
            android:layout_width="92dp"
            android:paddingBottom="2dp"
            android:gravity="right" />

        <TextView
            android:textSize="23sp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:id="@+id/bet_text5"
            android:background="@color/buttonTextColor"
            android:gravity="right"
            android:paddingRight="4dp"
            android:paddingTop="3dp" />

    </GridLayout>


</it.gmariotti.cardslib.library.view.CardViewNative>

</LinearLayout>