<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/number"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@drawable/card_background"
            android:visibility="visible">

            <TextView
                android:id="@+id/bet_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Jogo 01"
                android:paddingStart="10sp"
                android:textColor="@color/card_section_title_color"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:paddingTop="6sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/view2"
                android:layout_below="@+id/bet_number2"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/metadata"
            android:layout_below="@+id/number"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@drawable/card_background">

            <Button
                android:text="Automático"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button6"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="62dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:text="Manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button7"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="57dp"
                android:layout_marginTop="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/auto"
            android:layout_below="@+id/metadata"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@drawable/card_background"
            android:visibility="gone">

            <TextView
                android:text="Código"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_marginStart="17sp"
                android:layout_marginTop="10dp" />

            <EditText
                android:maxLength="3"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/placardCode"
                android:gravity="center_vertical|center"
                android:layout_width="60dp"
                android:layout_below="@+id/textView13"
                android:layout_alignParentStart="false"
                android:layout_marginStart="10sp" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:id="@+id/betType_spinner"
                android:textColor="#000000"
                android:layout_width="105dp"
                android:layout_alignTop="@+id/placardCode"
                android:layout_toEndOf="@+id/placardCode"
                android:layout_marginStart="10sp" />

            <TextView
                android:text="Tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_marginEnd="36dp"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/betType_spinner"
                android:layout_marginTop="10dp" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/outcome_spinner"
                android:textColor="#000000"
                android:layout_width="85dp"
                android:layout_alignBaseline="@+id/betType_spinner"
                android:layout_alignBottom="@+id/betType_spinner"
                android:layout_toEndOf="@+id/betType_spinner"
                android:layout_marginStart="10sp" />

            <TextView
                android:text="Prognóstico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/outcome_spinner"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10dp" />

            <Button
                android:text="Ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button5"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/load"
            android:layout_below="@+id/auto"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@drawable/card_background"
            android:visibility="gone">

            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="102dp"
                android:id="@+id/progressBar2"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:visibility="visible"
                android:layout_marginTop="10dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/manual"
            android:layout_below="@+id/load"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@drawable/card_background"
            android:visibility="gone">

            <EditText
                android:maxLength="3"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/placardCode2"
                android:gravity="center_vertical|center"
                android:layout_width="60dp"
                android:layout_below="@+id/textView13"
                android:layout_alignParentStart="false"
                android:layout_marginStart="10sp" />

            <TextView
                android:text="Prognóstico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:layout_alignEnd="@+id/outcome_spinner2"
                android:layout_above="@+id/outcome_spinner2"
                android:layout_marginEnd="5sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/home"
                android:layout_below="@+id/textView19"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10sp"
                android:layout_toStartOf="@+id/away" />

            <TextView
                android:text="Código"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_below="@+id/home"
                android:layout_alignParentStart="true"
                android:layout_marginStart="17sp"
                android:layout_marginTop="10dp" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/outcome_spinner2"
                android:textColor="#000000"
                android:layout_width="85dp"
                android:layout_alignBaseline="@+id/betType_spinner2"
                android:layout_alignBottom="@+id/betType_spinner2"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10sp" />

            <TextView
                android:text="Tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_below="@+id/home"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:id="@+id/betType_spinner2"
                android:textColor="#000000"
                android:layout_width="105dp"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Fora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView19"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView9"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="Bug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/outcomeDescription"
                android:layout_alignBaseline="@+id/textView23"
                android:layout_alignBottom="@+id/textView23"
                android:layout_toEndOf="@+id/textView23"
                android:visibility="gone" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/away"
                android:layout_alignBaseline="@+id/home"
                android:layout_alignBottom="@+id/home"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Casa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/home"
                android:layout_marginTop="10dp" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/sport_spinner"
                android:textColor="#000000"
                android:layout_below="@+id/textView23"
                android:layout_toStartOf="@+id/textView9"
                android:layout_width="150dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/odd"
                android:layout_alignBaseline="@+id/sport_spinner"
                android:layout_alignBottom="@+id/sport_spinner"
                android:layout_toEndOf="@+id/textView19"
                android:layout_width="60dp"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:text="Odd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:layout_above="@+id/odd"
                android:layout_alignEnd="@+id/odd"
                android:layout_marginEnd="12sp" />

            <TextView
                android:text="Desporto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:layout_below="@+id/betType_spinner2"
                android:layout_toStartOf="@+id/betType_spinner2"
                android:layout_marginEnd="9dp"
                android:layout_marginTop="10dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/myRadioGroup"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sport_spinner"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:gravity="center_horizontal|center"
                android:visibility="gone"
                android:layout_marginBottom="10dp">


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioSuccess"
                    android:layout_below="@+id/game_outcome"
                    android:layout_alignEnd="@+id/game_outcome"
                    android:text="Sucesso"
                    android:textSize="11sp"
                    android:layout_marginEnd="20sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/radioDefeat"
                    android:text="Derrota"
                    android:layout_marginStart="5sp"
                    android:textSize="11sp" />

                <RadioButton
                    android:text="Cancelado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioCancelled"
                    android:layout_marginLeft="5sp"
                    android:textSize="11sp"
                    android:layout_marginStart="20sp" />

            </RadioGroup>

        </RelativeLayout>

    </RelativeLayout>